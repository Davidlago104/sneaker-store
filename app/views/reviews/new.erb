<h1>add a review</h1>
<%= form_for(@review) do |f| %>

<%= f.label :stars%>
<%= f.number_field :stars, min:0, max:10%>
<br>
<%= f.label :recommend? %>
<%= f.check_box :recommendation%>
<br>
<%= f.label :title%>
<%= f.text_field :title%>
<br>
<%= f.label :thoughts?%>
<br>
<%= f.text_area :thoughts%>

<%= f.hidden_field :sneaker_id %>
<br>
  <%= f.submit "add your review"%>
<% end %>
