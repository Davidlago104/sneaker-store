
<%= render partial: 'layouts/error', locals: {thing: @review} %>


<%= form_for(@review) do |f| %>

<% if params[:sneaker_id]%>
<h1>Add a review for <%= @sneaker.name%></h1>
<% else %>
<h1>Create a review</h1>
<%= f.collection_select :sneaker_id, Sneaker.all, :id, :name%>
<br>
<% end %>

<%= f.label :stars%>
<%= f.number_field :stars, min:0, max:10%>
<br>
<%= f.label :recommend? %>
<%= f.check_box :recommendation%>
<br>
<%= f.label :title%>
<%= f.text_field :title%>
<br>
<%= f.label :thoughts?%>
<br>
<%= f.text_area :thoughts%>

<%= f.hidden_field :sneaker_id %>
<br>
  <%= f.submit "add your review"%>
<% end %>
